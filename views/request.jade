extends layout

block header
    script(src="https://maps.googleapis.com/maps/api/js?libraries=places")
    script(src="/javascripts/request.js")

block stylesheets
    link(rel="stylesheet", href="/stylesheets/datepicker/default.css")
    link(rel="stylesheet", href="/stylesheets/datepicker/default.date.css")
    link(rel="stylesheet", href="/stylesheets/datepicker/default.time.css")
